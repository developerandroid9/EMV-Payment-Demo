<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/headerNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple__light_700"
            android:padding="@dimen/pading_10dp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/pading_10dp">

            <TextView
                android:id="@+id/ipHeadingTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/pading_5dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/ipTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/portHeadingTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/pading_5dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/portTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/connectionTimeOutHeadingTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/pading_5dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/connectionTimeoutTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/responseTimeOutHeadingTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/pading_5dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/responseTimeoutTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/retryTimeOutHeadingTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/pading_5dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/retryTimeoutTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/sslSM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:theme="@style/CustomCompoundButton_Switch" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/isSSLChachingSM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:theme="@style/CustomCompoundButton_Switch" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>